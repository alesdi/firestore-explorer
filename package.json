{
  "name": "firestore-explorer",
  "displayName": "Firestore Explorer",
  "description": "A simple explorer for Firebase Firestore Database",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:firestore-explorer.openPath"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "firestore-explorer.openPath",
        "title": "Firestore: Open Path"
      }
    ],
    "configuration": {
      "title": "Firestore Explorer",
      "properties": {
        "firestore-explorer.adminSdkKey": {
          "type": "string",
          "default": "",
          "description": "Path to Firebase Admin SDK key file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "firebase-admin": "^9.11.1",
    "fs": "*"
  }
}
